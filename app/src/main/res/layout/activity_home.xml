<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".view.HomeActivity">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            >


            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:background="@drawable/header_backgroind"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/popMenuImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/leftalignment"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toStartOf="@+id/home_cart"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/home_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:src="@drawable/cart_bag"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_cart">

                <ImageView
                    android:id="@+id/viewPagerMain"
                    android:layout_width="360dp"
                    android:layout_height="190dp"
                    android:background="@drawable/shopimage"
                    android:contentDescription="@string/app_name"

                    android:scaleType="centerCrop"


                    />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:text="Special Offers"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"/>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:background="@color/white"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@color/white"
                        android:backgroundTint="@color/white">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/shirt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:backgroundTint="@color/white"
                            android:background="@color/white">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="10dp">

                                    <ImageView
                                        android:layout_width="@dimen/_200sdp"
                                        android:layout_height="@dimen/_100sdp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/four"
                                        />

                                </androidx.cardview.widget.CardView>


                                <TextView
                                    android:id="@+id/oddShirtName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="Pastel Pink Shirt"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15ssp"/>

                                <TextView
                                    android:id="@+id/oddShirtPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹732"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"/>


                            </LinearLayout>






                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/shirt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:backgroundTint="@color/white"
                            android:background="@color/white">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="10dp">

                                    <ImageView
                                        android:layout_width="@dimen/_200sdp"
                                        android:layout_height="@dimen/_100sdp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/five"
                                        />

                                </androidx.cardview.widget.CardView>


                                <TextView
                                    android:id="@+id/evenShirtName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="Blue Tie"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15ssp"/>

                                <TextView
                                    android:id="@+id/evenShirtPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹532"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"/>


                            </LinearLayout>






                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/shirt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:backgroundTint="@color/white"
                            android:background="@color/white">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="10dp">

                                    <ImageView
                                        android:layout_width="@dimen/_200sdp"
                                        android:layout_height="@dimen/_100sdp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/four"
                                        />

                                </androidx.cardview.widget.CardView>


                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="Pastel Pink Shirt"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15ssp"/>

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹732"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"/>


                            </LinearLayout>






                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </HorizontalScrollView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:text="Top Products"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"/>

                <ListView
                    android:id="@+id/productList"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_370sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:nestedScrollingEnabled="true"
                    android:padding="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/viewAllProducts"
                    android:layout_width="match_parent"
                    android:layout_height="137dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="right"
                    android:text="show all"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/_18sdp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/_3sdp"
        app:itemBackground="@color/base_color"
        app:itemIconSize="@dimen/_15sdp"
        app:itemIconTint="@color/black"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu" />


</androidx.constraintlayout.widget.ConstraintLayout>